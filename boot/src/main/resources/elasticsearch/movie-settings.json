{
  "analysis": {
    "analyzer": {
      "movie_analyzer": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "stop",
          "trim"
        ]
      }
    },
    "filter": {
      "edge_ngram_filter": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 20
      }
    }
  }
} 